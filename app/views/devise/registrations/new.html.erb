<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.label :username %>
    <%= f.text_field :username, :autofocus => true %>
  </div>

  <div><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>

  <%= f.fields_for :company, resource.company do |cf| %>
    <div>
      <%= cf.label :name, Company.human_attribute_name("name") %>
      <%= cf.text_field :name %>
    </div>

    <div>
      <%= cf.label :subdomain, Company.human_attribute_name("subdomain") %>
      <%= cf.text_field :subdomain %>
    </div>
  <% end %>

  <div><%= f.submit "Sign up", :class => "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
